#: kivy 1.10.1

<ScreenHome>:
    on_enter: _status_bar.set_status("This is a list of all comics in database")
    on_enter: self.prepare_screen(app.db_cursor())

    titles_container: _titles_container
    status_bar: _status_bar

#    ScreenTitle:
#        id: _screen_title
#        pos_hint: {'top': 1}
#        text: "Holger's Comic Collection "
    NavBox:
        id: _nav_box
        scr: 'home'
    ScreenContainer:
        id: _screen_content
        pos: 0, _status_bar.top
        height: root.height - (_nav_box.height + 2 * _status_bar.height)
        disabled: True if _status_bar.screen_disabled else False

        BoxLayout:
            # main box
            orientation: 'horizontal'
            BoxLayout:
                # filter column
                size_hint: None, 1
                width: dp(150)
            BoxLayout:
                # titles column
                ScrollView:
                    size_hint: 1, None
                    height: self.parent.height
                    BoxLayout:
                        id: _titles_container
                        size_hint_y: None
                        height: self.minimum_height
    BoxLayout:
        # status bar
        padding: dp(10)
        FieldBox:
            canvas.before:
                Color:
                    rgba: 0, 0, 0 , .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            StatusBar:
                id: _status_bar
